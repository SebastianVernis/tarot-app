# Tarot MÃ­stico - Environment Variables Template
# Copy this file to .env and fill in your values

# Required - Application Security
SECRET_KEY=your-secret-key-here-generate-a-random-string
JWT_SECRET_KEY=your-jwt-secret-key-here-generate-another-random-string

# Required - AI Service
GEMINI_API_KEY=your-gemini-api-key-from-google-ai-studio

# Optional - Database (defaults to SQLite if not set)
DATABASE_URL=sqlite:///tarot.db
# For PostgreSQL: postgresql://user:password@host:port/database

# Optional - Application Settings
FLASK_ENV=production
PORT=5000

# Optional - CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Optional - Feature Flags
ENABLE_ASTROLOGY=true
ENABLE_SUBSCRIPTIONS=true
